<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTerkiniRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="15dp"
        android:background="@color/white"
        android:elevation="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/white"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/iv_terkinirow"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded"
                android:scaleType="centerCrop"
                android:src="@drawable/megachan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_terkinirow"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/work_sans_bold"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/iv_terkinirow"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Pemerintah Ajak UMKM Transformasi Digital" />

            <TextView
                android:id="@+id/tv_subterkinirow"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/work_sans"
                android:text="Lorem ipsum dolor sit amet consectetur. Dolor interdum odio quam sed......."
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/iv_terkinirow"
                app:layout_constraintTop_toBottomOf="@+id/tv_terkinirow" />

            <TextView
                android:id="@+id/tv_terkinidate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/work_sans_light"
                android:text="Senin, 11 Maret 2024"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_terkinirow"
                app:layout_constraintTop_toBottomOf="@+id/tv_subterkinirow" />

            <TextView
                android:id="@+id/tv_roleterkinirow"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_textview_terkinirow"
                android:text=" keuangan "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/work_sans"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>