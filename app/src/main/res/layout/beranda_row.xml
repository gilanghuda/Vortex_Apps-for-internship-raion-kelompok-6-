<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F63BF"
        android:id="@+id/cardViewBerandaRow"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F63BF"
            android:paddingEnd="16dp">

            <ImageView
                android:id="@+id/iv_berandarow"
                android:layout_width="101dp"
                android:layout_height="101dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/iv_rowberanda1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_berandarow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/work_sans_bold"
                android:text="Lorem ipsum"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/iv_berandarow"
                app:layout_constraintTop_toBottomOf="@+id/tv_perusahaanberandarow" />

            <TextView
                android:id="@+id/tv_subberandarow"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="Lorem ipsum dolor sit amet consectetur. Dolor interdum odio quam sed aliquam."
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/iv_berandarow"
                app:layout_constraintTop_toBottomOf="@+id/tv_berandarow" />

            <TextView
                android:id="@+id/tv_perusahaanberandarow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/work_sans"
                android:text="Obsesi Media Group"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tanggalberandarow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_subcontainkonsultasi"
                android:backgroundTint="#0E2E59"
                android:text="    07 Maret 2024     "
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_berandarow"
                app:layout_constraintTop_toBottomOf="@+id/tv_subberandarow" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="17dp"
                android:layout_height="16dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_berandarow"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/iv_berandarow" />

            <TextView
                android:id="@+id/tv_onlineberandarow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_subcontainkonsultasi"
                android:backgroundTint="#0E2E59"
                android:text="   ðŸŽŸ Hybrid     "
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_tanggalberandarow" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>